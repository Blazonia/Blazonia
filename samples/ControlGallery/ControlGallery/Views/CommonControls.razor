@page "/commoncontrols"

<ContentView>
    <StackLayout Margin="new Thickness(20)">

        <Slider Minimum="0" Maximum="20" @bind-Value="SliderValue" />
        <Label>
            <Span>Slider is @_sliderValue</Span>
        </Label>

    </StackLayout>
</ContentView>

@code
{
    private double _sliderValue;

    public double SliderValue
    {
        get
        {
            return _sliderValue;
        }
        set
        {
            if (_sliderValue != value)
            {
                _sliderValue = value;
                //StateHasChanged();
            }
        }
    }
}
