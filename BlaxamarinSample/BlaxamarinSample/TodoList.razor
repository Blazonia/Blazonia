<StackLayout>
    <StackLayout Orientation="StackOrientation.Horizontal">
        @* Input area *@
        <Entry @bind-Text="newText" Placeholder="What's to be done?" />
        <Button Text="Add" OnClick="@AddItem" />
    </StackLayout>

    <StackLayout>
        @* List of todos *@
        @foreach (var item in items)
        {
            <TodoEntry Item="@item" />
        }
    </StackLayout>
</StackLayout>

@code
{
    string newText;
    List<TodoItem> items = new List<TodoItem>()
{
        new TodoItem{Text="111"},
        new TodoItem{Text="222"},
        new TodoItem{Text="333"},
    };

    void AddItem()
    {
        items.Add(new TodoItem { Text = newText });
        newText = null;
    }
}
