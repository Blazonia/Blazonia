@inject AppState AppState

<table class="mails">
    <thead>
        <tr>
            <th>From</th>
            <th>To</th>
            <th>Subject</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mail in folder.Mails)
        {
            <tr>
                <td>@mail.From</td>
                <td>@mail.To</td>
                <td>@mail.Subject</td>
                <td>@mail.Date</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private MailFolder folder;

    protected override void OnInitialized()
    {
        LoadFolder(AppState.CurrentFolder);
    }

    private void LoadFolder(string folderName)
    {
        var json = File.ReadAllText(Path.Combine("Storage", $"{folderName}.json"));
        folder = JsonSerializer.Deserialize<MailFolder>(json, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
    }
}
